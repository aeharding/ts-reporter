{
  "name": "ts-reporter",
  "version": "0.0.8",
  "description": "Track typescript conversion velocity for your big projects",
  "main": "index.js",
  "author": "Alexander Harding <2166114+aeharding@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean; tsc; chmod +x dist/cli.js",
    "clean": "rm -rf ./dist",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm .",
    "check-types": "tsc --noEmit",
    "check-formatting": "prettier --check '**/*.{js,json,css,md,scss,tsx,ts}'",
    "watch": "watch 'yarn build' lib"
  },
  "files": [
    "dist",
    "assets"
  ],
  "bin": {
    "ts-reporter": "./dist/cli.js"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.32",
    "@types/fs-extra": "^9.0.11",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.1",
    "@types/sloc": "^0.2.0",
    "@types/yargs": "^16.0.1",
    "execa": "^5.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "chart.js": "^2.9.4",
    "chartjs-node-canvas": "^3.1.0",
    "date-fns": "^2.21.1",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "glob-promise": "^4.1.0",
    "lodash": "^4.17.21",
    "sloc": "^0.2.1",
    "yargs": "^16.2.0"
  }
}
